<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.ProjMgmtSys.model.Gro">
	<class name="Gro" table="gro">
		<id name="groId" column="groId">
			<generator class="increment" />
		</id>	
		<property name="groName">
			<column name="groName" length="50" not-null="true" />
		</property>
		<property name="depId">
			<column name="depId" not-null="true" />
		</property>
	</class>
</hibernate-mapping>